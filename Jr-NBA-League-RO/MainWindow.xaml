<Window x:Class="Jr_NBA_League_RO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Jr_NBA_League_RO"
        xmlns:entityViews="clr-namespace:Jr_NBA_League_RO.View"
        mc:Ignorable="d"
        Title="JrNBALeagueRO" Height="520" Width="850">
    <Grid Background="#FF88A5E0">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Menu Background="#FFF7DDAE">
                <MenuItem x:Name="TeamsMenuItem" Header="Teams" FontFamily="Candara" Click="TeamsMenuItem_Click"></MenuItem>
                <MenuItem x:Name="PlayersMenuItem" Header="Players" FontFamily="Candara" Click="PlayersMenuItem_Click"></MenuItem>
                <MenuItem x:Name="ActivePlayersMenuItem" Header="ActivePlayers" FontFamily="Candara" Click="ActivePlayersMenuItem_Click"></MenuItem>
                <MenuItem x:Name="GamesMenuItem" Header="Games" FontFamily="Candara" Click="GamesMenuItem_Click"></MenuItem>
            </Menu>
        </Grid>
        <ContentControl x:Name="ContentArea" Grid.Row="1" Margin="15"/>
    </Grid>
</Window>
